{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc compila il file attivo",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"${fileDirname}/*.c",	
				//"${fileDirname}/*.h",	
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.out",
				"-lm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"isDefault": true,
			"kind": "build"
			},
			"detail": "compilatore: /usr/bin/clang"
		}
	]
}
